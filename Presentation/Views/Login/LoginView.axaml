<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Presentation.Views.Login.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmlogin="using:Presentation.ViewModels.Login"
    xmlns:vmwp="using:Presentation.ViewModels.WorkPlace"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  x:Class="Presentation.Views.WorkView"  -->
    <Design.DataContext>
        <vmlogin:LoginViewModel />
    </Design.DataContext>
    <Grid Margin="230">
        <StackPanel Orientation="Vertical" Width="500">
            <Image
                Height="100"
                Source="{SvgImage /Assets/logo_colorfull.svg}"
                Width="100" />
            <Border Background="#abffda" CornerRadius="5">
                <TextBlock
                    FontFamily="OpenSans"
                    FontSize="20"
                    FontWeight="Bold"
                    TextAlignment="Center">
                    Добро пожаловать&#10;в автоматизированное рабочее место врача!
                </TextBlock>
            </Border>
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                Text="- все необходиоме в одном месте."
                TextAlignment="Center" />
            <TextBlock
                FontSize="14"
                Text="Для использования сервиса авторизируйтесь."
                TextAlignment="Center" />
            <TextBox
                Margin="0,10,0,0"
                Text="{Binding UserLogin, Mode=TwoWay}"
                Watermark="Введите логин"
                Width="350" />
            <TextBox
                Margin="0,10,0,0"
                PasswordChar="*"
                Text="{Binding Password, Mode=TwoWay}"
                Watermark="Введите пароль"
                Width="350" />
            <Button
                Command="{Binding GoToWorkPlace}"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsDataValid}"
                Width="160">
                Войти
            </Button>
        </StackPanel>
    </Grid>
</UserControl>