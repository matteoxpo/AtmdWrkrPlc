<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Presentation.Views.WorkPlace.DefaultWorkPlaceView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmwp="using:Presentation.ViewModels.WorkPlace"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vmwp:DefaultWorkPlaceViewModel />
    </Design.DataContext>
    <Grid>
        <!--  SelectedItems = "{Binding ObservableCollection}"  -->
        <!--  SelectedItem = "{Binding Property:string}"  -->
        <ListBox
            HorizontalAlignment="Left"
            Items="{Binding Timetable}"
            Margin="50"
            Width="300">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <!-- <TextBlock Text="{Binding MeetingTime}" /> -->
                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="30"
            Text="За работу!!!"
            VerticalAlignment="Top" />
        <!--    -->

    </Grid>
</UserControl>