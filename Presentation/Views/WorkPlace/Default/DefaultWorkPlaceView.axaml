<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Presentation.Views.WorkPlace.Default.DefaultWorkPlaceView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmwp="using:Presentation.ViewModels.WorkPlace"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vmwp:DefaultWorkPlaceViewModel />
    </Design.DataContext>
    <Grid Margin="30">
        <StackPanel Spacing="10">
            <Border Background="{StaticResource HeaderColor}" CornerRadius="5">
                <TextBlock
                    FontSize="{StaticResource HeaderTextSize}"
                    FontWeight="Heavy"
                    HorizontalAlignment="Center"
                    Text="Рабочее пространство"
                    VerticalAlignment="Top" />
            </Border>
            <StackPanel Orientation="Horizontal">
                <StackPanel Spacing="5" Width="500">
                    <TextBlock
                        Background="{StaticResource SubTitleColor}"
                        FontSize="{StaticResource SubTitleTextSize}"
                        Text="Список пациентов" />
                    <ListBox Items="{Binding Timetable}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock FontSize="{StaticResource TextSize}" Text="{Binding Name}" />
                                    <TextBlock FontSize="{StaticResource TextSize}" Text="{Binding Surname}" />
                                    <TextBlock
                                        FontSize="{StaticResource TextSize}"
                                        FontStyle="Italic"
                                        Text="{Binding CurrentDoctorMeetTime}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Command="{Binding}" HorizontalAlignment="Center">
                        Добавить человека из 'живой очереди'
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>